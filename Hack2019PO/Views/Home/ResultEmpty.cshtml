@model Hack2019PO.Models.AttendanceRecord
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Chyba</title>
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            background-color: #EEE;
        }

        h1.h1 {
            margin: 0 auto;
            border-radius: 5px;
            font-size: 3em;
        }

        img {
            max-height: 60vh;
            object-fit: cover;
        }

        div.square {
            width: 400px;
            height: 300px;
            background-color: rgba(255,255,255,0.5);
            z-index: 100;
            border: 20px solid white;
        }

        div.flexin {
            position: relative;
        }

        header {
            display: flex;
            background-color: #CCC;
        }

            header a {
                display: block;
                flex: 1;
                text-align: center;
                padding: 15px 10px;
                color: black;
                font-size: 1.5em;
            }

                header a:hover {
                    background-color: #BBB;
                    color: black;
                }

        main {
            margin: 5px 0px 5px 5px;
            background-color: #AAA;
        }

        aside {
            margin: 5px;
            background-color: blue;
        }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
        }

        li {
            float: right;
        }

            li a {
                display: block;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

                li a:hover:not(.active) {
                    background-color: #111;
                    color: white;
                }

        .active {
            background-color: #c33046;
        }
    </style>
</head>
<body>
    <ul>
        <li class="active">@Html.ActionLink("Vyhľadaj poslanca", "Search")</li>
        <li>@Html.ActionLink("Vyhľadať volebnú miestnosť", "LookupVoting")</li>
        <li>@Html.ActionLink("Štatistiky poslancov", "Statistics")</li>
        <li>@Html.ActionLink("Domov", "Index")</li>
    </ul>
    <div>
        <p>Ľutujeme, ale vami hľadaný objekt @Model.Name nebol nájdený :(</p>
    </div>
</body>
</html>
