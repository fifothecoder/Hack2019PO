@model Hack2019PO.Models.AttendanceRecord[]
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <meta />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Nunito&display=swap" rel="stylesheet">
    <title>@Model[0].Name</title>
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            background-color: #EEE;
        }

        h1.h1 {
            margin: 0 auto;
            border-radius: 5px;
            font-size: 3em;
        }

        img {
            max-height: 60vh;
            object-fit: cover;
        }

        div.square {
            width: 400px;
            height: 300px;
            background-color: rgba(255,255,255,0.5);
            z-index: 100;
            border: 20px solid white;
        }

        div.flexin {
            position: relative;
        }

        header {
            display: flex;
            background-color: #CCC;
        }

            header a {
                display: block;
                flex: 1;
                text-align: center;
                padding: 15px 10px;
                color: black;
                font-size: 1.5em;
            }

                header a:hover {
                    background-color: #BBB;
                    color: black;
                }

        main {
            margin: 5px 0px 5px 5px;
            background-color: #AAA;
        }

        aside {
            margin: 5px;
            background-color: blue;
        }
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
        }

        li {
            float: right;
        }

            li a {
                display: block;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

                li a:hover:not(.active) {
                    background-color: #111;
                    color: white;
                }

        .active {
            background-color: #c33046;
        }
    
    </style>
</head>
<body>
    
    <ul>
        <li>@Html.ActionLink("Vyhľadaj poslanca", "Search")</li>
        <li>@Html.ActionLink("Domov", "Index")</li>

    </ul>
    <div>
        <table>
            <thead>
                <tr>
                    <td>Číšlo zasadnutia</td>
                    <td>Dátum zasadnutia</td>
                    <td>Poslanec</td>
                    <td>Politická strana</td>
                    <td>Prítomnosť</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model)
                {
                    <tr>
                        <td>@data.SessionID</td>
                        <td>@data.SessionDate</td>
                        <td>@data.Name</td>
                        <td>@data.Party</td>
                        <td>@data.Attended</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>


