@model Hack2019PO.Models.VotingRoomData[]
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <meta />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Nunito&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/styles/custom.css">
    <title>Volebné miestnosti</title>
    <style>
        .pr{
            width:150px;
        }
        table{
            height:160px;
            margin: 0 auto;
        }
        .tr{
            display:inline-block;
        }
        .fr{
            width:100%;
            text-align:center;
        }
        table tr{
            text-align:left;
        }
        table tr td:nth-child(odd){
            padding-right:10px;
        }
        table tr td:nth-child(even){
            padding-left:10px;
        }
    </style>
</head>
<body>
    <ul>
        <img src="../../images/volb.png" alt="Alternate Text" style="height:49px; margin-left: 25px; margin-top:2px" />
        <li>@Html.ActionLink("O nás", "Info")</li>
        <li>@Html.ActionLink("Vyhľadať poslanca PSK", "Search")</li>
        <li class="active">@Html.ActionLink("Vyhľadať volebnú miestnosť", "LookupVoting")</li>
        <li>@Html.ActionLink("Štatistiky poslancov", "Statistics")</li>
        <li>@Html.ActionLink("Domov", "Index")</li>
    </ul>

    <div style="margin-top:30px" class="fr">
        @foreach (var room in Model)
        {
            <div style="margin-bottom:30px" class="tr">
                <table style="border:3px double black;width:600px">
                    <tr style="border-bottom:1px solid black">
                        <td style="border-right:1px solid black;text-align:right" class="pr">Číslo okrsku :</td>
                        <td>@room.DistrictNo</td>
                    </tr>
                    <tr style="border-bottom:1px solid black">
                        <td style="border-right:1px solid black;text-align:right" class="pr">Adresa budovy :</td>
                        <td>@room.DistrictAddress</td>
                    </tr>
                    <tr style="border-bottom:1px solid black">
                        <td style="border-right:1px solid black;text-align:right" class="pr">Názov budovy :</td>
                        <td>@room.DistrictRoom</td>
                    </tr>
                    <tr style="border-bottom:1px solid black">
                        <td style="border-right:1px solid black;text-align:right" class="pr">Mesto :</td>
                        <td>@room.City</td>
                    </tr>
                    <tr style="border-bottom:1px solid black">
                        <td style="border-right:1px solid black;text-align:right" class="pr">Kontaktná osoba :</td>
                        <td>@room.ContactPerson</td>
                    </tr>
                </table>
            </div>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>