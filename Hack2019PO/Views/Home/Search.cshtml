@model string

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <meta />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Nunito&display=swap" rel="stylesheet">
    <title>Vyhľadaj poslanca</title>
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            background-color: #EEE;
        }

        h1.h1 {
            margin: 0 auto;
            border-radius: 5px;
            font-size: 3em;
        }

        img {
            max-height: 60vh;
            object-fit: cover;
        }

        div.square {
            width: 400px;
            height: 300px;
            background-color: rgba(255,255,255,0.5);
            z-index: 100;
            border: 20px solid white;
        }

        div.flexin {
            position: relative;
        }

        header {
            display: flex;
            background-color: #CCC;
        }

            header a {
                display: block;
                flex: 1;
                text-align: center;
                padding: 15px 10px;
                color: black;
                font-size: 1.5em;
            }

                header a:hover {
                    background-color: #BBB;
                    color: black;
                }

        main {
            margin: 5px 0px 5px 5px;
            background-color: #AAA;
        }

        aside {
            margin: 5px;
            background-color: blue;
        }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
        }

        li {
            float: right;
        }

            li a {
                display: block;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

                li a:hover:not(.active) {
                    background-color: #111;
                    color: white;
                }

        .active {
            background-color: #c33046;
        }
    
    </style>
</head>
<body>
    <ul>
        <li>@Html.ActionLink("Vyhľadať volebnú miestnosť", "Search")</li>
        <li>@Html.ActionLink("Štatistiky poslancov", "Search")</li>
        <li class="active">@Html.ActionLink("Vyhľadaj poslanca", "Search")</li>
        <li>@Html.ActionLink("Domov", "Index")</li>

    </ul>
    

    <div style="display:flex; justify-content:center; padding-top:50px" >
        <form action="Search" method="POST">
            @Html.DropDownList("name", new SelectList(Hack2019PO.Internals.OpenDataHandler.Poslanci, "Anna Schlosserová"))
            <input type="submit" value="Vyhľadať" />
        </form>
    </div>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>

